{
  "compilerOptions": {
    "target": "es6", // Hoặc phiên bản ECMAScript bạn muốn
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Thư mục đầu ra cho các file biên dịch
    "rootDir": "./src" // Thư mục gốc cho mã nguồn
  },
  "include": ["src/**/*"], // Bao gồm tất cả các file trong thư mục src
  "exclude": ["node_modules", "**/*.spec.ts"] // Loại trừ thư mục node_modules và các file test
}